<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginBottom="60dp"-->
            <!--android:text="개인 정보 설정"-->
            <!--android:textColor="#0C3BA0"-->
            <!--android:textSize="20sp"-->
            <!--android:textStyle="bold" />-->

        <ImageView
            android:layout_marginTop="50dp"
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_photo_blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20sp">


        <!--<EditText-->
            <!--android:id="@+id/edit_id"-->
            <!--android:layout_width="270dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:drawableStart="@drawable/ic_person_blue"-->
            <!--android:hint="ID" />-->

        <TextView
            android:id="@+id/view_id"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_person_blue"
            android:textSize="20dp"
            android:text="aaa"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20sp">

        <EditText
            android:id="@+id/edit_pw"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_lock_blue"
            android:selectAllOnFocus="true"
            android:textSize="20dp"
            android:hint="신규암호" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20sp">

        <TextView
            android:id="@+id/view_name"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_name_blue"
            android:textSize="20dp"
            android:hint="유형욱" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_editCheck"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="#0C3BA0"
            android:onClick="signChckCLick"
            android:text="변경"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

</LinearLayout>